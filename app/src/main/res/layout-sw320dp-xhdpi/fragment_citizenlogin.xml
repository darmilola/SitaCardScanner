<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.Citizenlogin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="5dp"


            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Input your ORIN and Phone Number"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:id="@+id/pinnumbertitle"
                android:textColor="#ffffff"
                />

            <EditText
                android:id="@+id/userpin"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:singleLine="true"
                android:hint="ORIN"
                android:drawablePadding="10dp"
                android:textColorHint="#50000000"
                android:textColor="@color/black_color"
                android:inputType="number"
                android:layout_marginTop="30dp"
                android:textSize="20dp"
                android:background="@drawable/logintextfielddesign"
                android:drawableLeft="@drawable/passworddrawableleft"
                android:maxLines="1"/>
            <EditText
                android:id="@+id/userphonenumber"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:singleLine="true"
                android:hint="Phone number"
                android:drawablePadding="10dp"
                android:textColorHint="#50000000"
                android:textColor="@color/black_color"
                android:inputType="number"
                android:layout_marginTop="30dp"
                android:textSize="20dp"
                android:background="@drawable/logintextfielddesign"
                android:drawableLeft="@drawable/phonerealdrawableleft"
                android:maxLines="1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_marginTop="30dp"
                android:background="@drawable/loginpagelogindesign"
                android:text="Log In"
                android:textAllCaps="false"
                android:id="@+id/citizenlogin"

                android:textColor="@color/White_color"
                android:textSize="@dimen/Text_size" />



        </LinearLayout>
    </ScrollView>

</LinearLayout>
